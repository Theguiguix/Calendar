<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.miage.soorak.calendar.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <TextView
        android:text="Aujourd'hui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toggleButtonProposition"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="14dp"
        android:id="@+id/textView3" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true">

        <GridLayout
            android:layout_width="match_parent"
            android:padding="2dp"
            android:layout_height="50dp"
            android:columnCount="2"
            android:rowCount="2"
            android:background="@android:color/darker_gray">
            <TextView
                android:layout_height="25dp"
                android:layout_column="0"
                android:layout_row="0"
                android:text="Donner à manger au chat">
            </TextView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_rowSpan="2"
                android:layout_gravity="right"
                android:id="@+id/imageView2"
                app:srcCompat="@mipmap/george" />

            <TextView
                android:layout_height="25dp"
                android:layout_column="0"
                android:layout_row="1"
                android:text="19h00"
                android:id="@+id/textView4">
            </TextView>

        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:padding="2dp"
            android:layout_marginTop="10dp"
            android:layout_height="50dp"
            android:columnCount="2"
            android:rowCount="2"
            android:background="@android:color/darker_gray">
            <TextView
                android:layout_height="25dp"
                android:layout_column="0"
                android:layout_row="0"
                android:text="Donner à manger au chat">
            </TextView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_rowSpan="2"
                android:layout_gravity="right"
                app:srcCompat="@mipmap/audrey"
                android:id="@+id/imageView3" />

            <TextView
                android:layout_height="25dp"
                android:layout_column="0"
                android:layout_row="1"
                android:text="19h00"
                android:id="@+id/textView5">
            </TextView>

        </GridLayout>

    </LinearLayout>

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toggleButtonTaches"
        android:textOff="Tâches"
        android:textOn="Tâches"
        android:checked="true"
        android:layout_marginLeft="51dp"
        android:layout_marginStart="51dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:textColorLink="?attr/colorPrimary" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toggleButtonProposition"
        android:textOff="Proposition"
        android:textOn="Proposition"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/toggleButtonTaches"
        android:layout_toEndOf="@+id/toggleButtonTaches"
        android:textColorLink="?attr/colorPrimary" />

</RelativeLayout>
